{
  "name": "literate-math",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Obsidian plugin that treats {{ ... }} as <lmath>lmath: ...</lmath> with smart editing behavior.",
  "author": "You",
  "license": "MIT",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "dev": "node esbuild.config.mjs --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@codemirror/state": "6.5.2",
    "@codemirror/view": "6.38.1",
    "@types/node": "24.3.0",
    "@typescript-eslint/eslint-plugin": "8.39.1",
    "@typescript-eslint/parser": "8.39.1",
    "esbuild": "0.25.9",
    "eslint": "9.33.0",
    "jsdom": "26.1.0",
    "obsidian": "1.8.7",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
