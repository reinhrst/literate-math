{
  "name": "literate-math",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Obsidian plugin that treats {{ ... }} as <lmath>lmath: ...</lmath> with smart editing behavior.",
  "author": "You",
  "license": "MIT",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "dev": "node esbuild.config.mjs --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@codemirror/language": "^6.11.3",
    "@codemirror/state": "6.5.2",
    "@codemirror/view": "^6.38.2",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "24.3.0",
    "esbuild": "0.25.9",
    "eslint": "9.33.0",
    "jsdom": "26.1.0",
    "obsidian": "^1.8.7",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "mathjs": "^14.6.0"
  }
}
